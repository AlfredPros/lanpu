<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryActivity"
    android:padding="30dp"
    android:background="@color/yellow">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/entry_detail"
        android:name="umn.ac.id.lanpu.ui.dashboard.TicketFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_ticket"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/entry_detail"
        app:cardElevation="15dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/home_page_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK TO HOMEPAGE"
            android:textSize="18sp"
            android:textStyle="italic"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:background="@color/lighter_black"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>