<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:background="#FFF500">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="240dp"
        android:layout_height="213dp"
        app:srcCompat="@drawable/account_black"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="56dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="353dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Password"
            android:textColor="@color/lighter_black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/passwordSignUp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lighter_black"
            android:hint="********"
            android:inputType="textPassword" />

        <!--        <TextView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:textStyle="bold"-->
        <!--            android:textColor="@color/lighter_black"-->
        <!--            android:text="Phone Number"/>-->
        <!--        <EditText-->
        <!--            android:id="@+id/phoneSignUp"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:backgroundTint="@color/lighter_black"-->
        <!--            android:hint="012345678900"-->
        <!--            android:inputType="phone"/>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Confirm Password"
            android:textColor="@color/lighter_black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/passwordSignUp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lighter_black"
            android:hint="********"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/signUpButtonInSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/lighter_black"
            android:onClick="signUpInLogin"
            android:text="Change Password" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>