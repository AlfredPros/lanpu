<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentReport"
    android:background="@color/yellow">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/ticket_card"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardCornerRadius="20dp"
          app:cardElevation="10sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:strokeColor="@color/black"
          app:strokeWidth="3dp"
          app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="24dp"
            android:paddingVertical="24dp">

          <TextView
              android:id="@+id/ticket_title_textview"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginHorizontal="50dp"
              android:text="PARKING TICKET DETAIL"
              android:textColor="@color/black"
              android:textSize="20sp"
              android:textStyle="bold|italic"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          <LinearLayout
              android:id="@+id/details_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="24dp"
              android:orientation="vertical"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/ticket_title_textview">

            <LinearLayout
                android:id="@+id/ticket_number_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/ticket_number_label"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:text="TICKET NUMBER"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/ticket_number_data"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="ASDFGHJKL1234567"
                  android:textColor="@color/lighter_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticket_name_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/ticket_name_label"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:text="NAME"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/ticket_name_data"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="ADHITYA BAGUS WICAKSONO"
                  android:textColor="@color/lighter_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticket_nim_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/ticket_nim_label"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:text="TICKET ID NUMBER"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/ticket_nim_data"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="00000048211"
                  android:textColor="@color/lighter_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticket_time_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/ticket_time_label"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:text="ENTRY TIME"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/ticket_time_data"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="24/10/2022 12:30:00"
                  android:textColor="@color/lighter_black" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ticket_outtime_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/ticket_outtime_label"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:text="OUT TIME"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/ticket_outtime_data"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="24/10/2022 17:30:00"
                  android:textColor="@color/lighter_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticket_duration_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/ticket_duration_label"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:text="PARKING DURATION"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/ticket_duration_data"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="05 HOURS 00 MINUTES 00 SECONDS"
                  android:textColor="@color/lighter_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticket_price_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/ticket_price_label"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:text="PRICE"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/ticket_price_data"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Rp 2.000,-"
                  android:textColor="@color/lighter_black" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ticket_category_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/ticket_category_label"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:text="CATEGORY"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/ticket_category_data"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="MOTORCYCLE"
                  android:textColor="@color/lighter_black" />
            </LinearLayout>
          </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
      </com.google.android.material.card.MaterialCardView>

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:cardCornerRadius="20dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/ticket_card"
          app:cardElevation="10dp"
          android:layout_marginTop="-20dp"
          app:cardUseCompatPadding="true">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/home_page_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK TO HOMEPAGE"
            android:textSize="18sp"
            android:textStyle="italic"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:background="@color/lighter_black"/>
      </androidx.cardview.widget.CardView>
      </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>