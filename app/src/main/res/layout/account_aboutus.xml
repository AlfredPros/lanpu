            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lapangan Parkir UMN"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="4dp"/>
    </LinearLayout>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/title_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Halo Semuanya!"
                android:textAlignment="center"
                android:textSize="18dp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loysing tidur Loy. Loysing udha tidur nih, Loy. Okeh dia udah tidur. halo halo. karena loysing sudah tidur maka kita tilus aja terus tilus-tilus apa coba tilus. aku diem aja deh."
                android:textAlignment="center"
                android:lineHeight="28dp"
                android:textSize="18dp"
                android:padding="4dp"/>
        </LinearLayout>
    </ScrollView>

