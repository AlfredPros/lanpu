<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16sp"
    android:layout_marginLeft="6sp"
    android:layout_marginRight="6sp"
    android:paddingStart="10sp"
    android:background="@drawable/gui_history_item_nine">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_weight="2"
        android:textAlignment="center"
        android:layout_gravity="center"
        app:srcCompat="@drawable/history_ticket"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/entry_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Entry Time"
            android:textStyle="bold"
            android:textColor="#272727"/>

        <TextView
            android:id="@+id/entry_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="a"
            android:textColor="#272727"/>

        <TextView
            android:id="@+id/out_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Out Time"
            android:textStyle="bold"
            android:textColor="#272727"/>

        <TextView
            android:id="@+id/out_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="b"
            android:textColor="#272727"/>

        <TextView
            android:id="@+id/ticket_number_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ticket Number"
            android:textStyle="bold"
            android:textColor="#272727"/>

        <TextView
            android:id="@+id/ticket_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="c"
            android:textColor="#272727"/>

        <TextView
            android:id="@+id/price_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Price"
            android:textStyle="bold"
            android:textColor="#272727"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="d"
            android:layout_marginBottom="16dp"
            android:textColor="#272727"/>

    </LinearLayout>
</LinearLayout>