<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment"
    android:background="@color/yellow">


    <LinearLayout
        android:id="@+id/account_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0">

        <ImageView
            android:id="@+id/account_icon"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:textAlignment="center"
            app:srcCompat="@drawable/account_black"
            android:layout_marginTop="36dp"/>

        <TextView
            android:id="@+id/account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adhitya Bagus Wicaksono"
            android:textAlignment="center"
            android:textColor="@color/lighter_black"
            android:textSize="25sp"
            android:layout_marginTop="12dp"/>

        <View
            android:id="@+id/account_separator"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="#272727"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/account_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_header"
        app:layout_constraintVertical_bias="0.125">

        <TextView
            android:id="@+id/account_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Change Password"
            android:textColor="@color/lighter_black"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="375dp"
            android:layout_height="3dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="#272727"
            android:layout_marginBottom="21dp"/>

        <!--
        <TextView
            android:id="@+id/account_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Notification Setting"
            android:textColor="@color/lighter_black"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="375dp"
            android:layout_height="3dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="#272727"
            android:layout_marginBottom="21dp"/>
        -->

        <TextView
            android:id="@+id/aboutus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="About Us"
            android:textColor="@color/lighter_black"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="375dp"
            android:layout_height="3dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="#272727"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/holo_red_dark"
        android:onClick="signUpInLogin"
        android:text="LOGOUT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_content"
        app:layout_constraintVertical_bias="0" />

</androidx.constraintlayout.widget.ConstraintLayout>