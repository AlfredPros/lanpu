<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/yellow"
        android:padding="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/lanpuLogoBlackLoginSignupScreen"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:src="@drawable/lanpu_logo_black"
            android:layout_marginBottom="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lighter_black"
                android:textAlignment="center"
                android:padding="8dp"
                android:textStyle="bold"
                android:text="SIGN UP"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/lighter_black"
                android:text="Your Name"/>
            <EditText
                android:id="@+id/nameSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lighter_black"
                android:hint="John Doe"
                android:inputType="text"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textColor="@color/lighter_black"
                android:text="E-Mail"/>
            <EditText
                android:id="@+id/emailSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lighter_black"
                android:hint="john.doe@student.umn.ac.id"
                android:inputType="textEmailAddress"/>
    <!--        <TextView-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:textStyle="bold"-->
    <!--            android:textColor="@color/lighter_black"-->
    <!--            android:text="Phone Number"/>-->
    <!--        <EditText-->
    <!--            android:id="@+id/phoneSignUp"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:backgroundTint="@color/lighter_black"-->
    <!--            android:hint="012345678900"-->
    <!--            android:inputType="phone"/>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/lighter_black"
                android:layout_marginTop="4dp"
                android:text="Password"/>
            <EditText
                android:id="@+id/passwordSignUp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lighter_black"
                android:hint="********"
                android:inputType="textPassword"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/lighter_black"
                android:layout_marginTop="4dp"
                android:text="Confirm Password"/>
            <EditText
                android:id="@+id/passwordSignUp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lighter_black"
                android:hint="********"
                android:inputType="textPassword"/>
            <Button
                android:id="@+id/signUpButtonInSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Sign Up"
                android:backgroundTint="@color/lighter_black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/loginInSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:background="@color/lighter_black"
            android:textColor="@color/white"
            android:padding="4dp"
            android:onClick="loginInSignUp"
            android:text="Already have an account? Login here"/>

    </LinearLayout>
</ScrollView>